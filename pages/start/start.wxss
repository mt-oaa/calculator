@import '../style/weui.wxss';

page{
    background-color:rgb(255, 0, 255);
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
    color: #7020bb;
}

.page__desc {
    margin-top: 5px;
    color:#8a20bb;
    text-align: left;
    font-size: 14px;
}